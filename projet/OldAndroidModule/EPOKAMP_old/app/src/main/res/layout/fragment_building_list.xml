<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginTop="3dp"
    android:layout_marginEnd="0dp"
    android:layout_marginRight="0dp"
    android:orientation="vertical"
    android:paddingBottom="20dp"
    tools:context=".fragments.BuildingListFragment">

    <ImageView
        android:id="@+id/returnToDisplayList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_baseline_keyboard_return_24" />

    <TextView
        android:id="@+id/addList"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/returnToDisplayList"
        android:fontFamily="@font/contrail_one"
        android:text="Ajouter une Liste"
        android:textColor="@color/black"
        android:textSize="24sp" />

    <ImageView
        android:id="@+id/addTheList"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignRight="@id/addList"
        android:layout_alignParentLeft="false"
        android:layout_alignParentRight="true"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_baseline_check_24" />

    <EditText
        android:id="@+id/editNameListe"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_below="@id/addTheList"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="@drawable/style_edit_text"
        android:ems="10"

        android:hint="Nom de la liste"
        android:inputType="textShortMessage"
        android:paddingLeft="10dp" />

    <View
        android:id="@+id/firstSeparation"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/editNameListe"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:background="#c0c0c0" />

    <FrameLayout
        android:id="@+id/listOfProductsContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@id/impotyButton"
        android:layout_below="@id/firstSeparation"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="0dp" />


    <View
        android:id="@+id/SecondSeparation"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/listOfProductsContainer"
        android:layout_marginStart="15dp"
        android:layout_marginLeft="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginRight="15dp"
        android:layout_marginBottom="20dp"
        android:background="#c0c0c0" />


    <ImageView
        android:id="@+id/impotyButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="55dp"
        android:layout_marginLeft="55dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_menu_book_24" />

    <ImageView
        android:id="@+id/shareFriendsButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:src="@drawable/ic_baseline_mobile_screen_share_24" />

    <ImageView
        android:id="@+id/addProductButton"
        android:layout_width="35dp"
        android:layout_height="35dp"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"

        android:layout_marginTop="10dp"
        android:layout_marginEnd="55dp"
        android:layout_marginRight="55dp"
        android:src="@drawable/ic_baseline_add_shopping_cart_24" />

</RelativeLayout>