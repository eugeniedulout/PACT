<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ProductInfoFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:id="@+id/infosText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:text="Infos"
        android:textSize="26sp" />

    <ImageView
        android:id="@+id/productImage"
        android:layout_width="120dp"
        android:layout_height="110dp"
        android:layout_below="@id/infosText"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="15dp"
        tools:src="@tools:sample/avatars" />

    <TextView
        android:id="@+id/productName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productImage"
        android:layout_marginStart="25dp"
        android:layout_marginLeft="25dp"
        android:layout_toRightOf="@id/productImage"
        android:text="Name "
        android:textColor="#000000"
        android:textSize="26sp" />

    <TextView
        android:id="@+id/productPriceText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productName"
        android:layout_alignLeft="@id/productName"
        android:layout_marginTop="15dp"
        android:text="0 â‚¬"
        android:textColor="#000000"
        android:textSize="36sp"
        android:textStyle="bold|italic" />

    <TextView
        android:id="@+id/enStockText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/productPriceText"
        android:layout_marginStart="75dp"
        android:layout_marginLeft="75dp"
        android:layout_marginTop="10dp"
        android:layout_toRightOf="@id/productPriceText"
        android:text="En stock"
        android:textColor="#099A0F"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/productDescriptionText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/productImage"
        android:layout_marginStart="10dp"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="25dp"
        android:text="Description du produit"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/environmentalScoreText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/productDescriptionText"
        android:layout_alignLeft="@id/productDescriptionText"
        android:layout_marginTop="20dp"
        android:text="A"
        android:textColor="#27A82C"
        android:textSize="55sp" />

</RelativeLayout>
