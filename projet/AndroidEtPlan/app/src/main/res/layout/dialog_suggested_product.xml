<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="400dp"
    android:layout_height="400dp"
    android:layout_centerInParent="false"
    android:layout_gravity="center"
    android:background="@color/colorback"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="400dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp">

        <androidx.cardview.widget.CardView
            android:id="@+id/gaucheButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="20dp"
            android:background="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorm"
            app:cardCornerRadius="50dp">

            <ImageView
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="false"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_left_24" />
        </androidx.cardview.widget.CardView>


        <TextView
            android:id="@+id/ingredientNameSugg"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center"
            android:text="Selectionnez vos produits"
            android:textColor="#302C0C"
            android:textSize="18sp" />


        <androidx.cardview.widget.CardView
            android:id="@+id/droiteButton"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:background="@color/black"
            android:foreground="?android:attr/selectableItemBackground"
            app:cardBackgroundColor="@color/colorm"
            app:cardCornerRadius="50dp">

            <ImageView
                android:id="@+id/imageDroit"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_centerInParent="false"
                android:layout_gravity="center"
                android:src="@drawable/ic_baseline_arrow_right_24" />
        </androidx.cardview.widget.CardView>
    </RelativeLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/ListViewproductSuggested"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginRight="0dp" />

</LinearLayout>