<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="0dp"
    android:layout_marginRight="0dp"
    android:background="#FAFAFA"
    android:orientation="horizontal"
    android:weightSum="100">


    <androidx.cardview.widget.CardView
        android:id="@+id/cardVV"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="15dp"
        android:layout_weight="10"
        app:cardBackgroundColor="#FFFFFF">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:background="@color/colorBackroundWhite"
            android:backgroundTint="#FFFFFF"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iconnProduct"
                android:layout_width="200dp"
                android:layout_height="100dp"
                android:layout_marginStart="20dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="10dp"
                android:layout_weight="10"
                android:paddingRight="20dp"
                app:srcCompat="@drawable/ic_baseline_map_24" />

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginEnd="20dp"
                android:layout_marginRight="20dp"
                android:layout_weight="10">

                <TextView
                    android:id="@+id/nameProduct"
                    android:layout_width="match_parent"
                    android:layout_height="70dp"
                    android:layout_marginTop="10dp"
                    android:layout_weight="10"
                    android:choiceMode="singleChoice"
                    android:fontFamily="@font/carrois_gothic"
                    android:text="TextView"
                    android:textAlignment="textStart"
                    android:textColor="#202022"

                    android:textSize="18sp"
                    tools:layout_editor_absoluteX="392dp" />

                <TextView
                    android:id="@+id/priceProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="36dp"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="5dp"
                    android:layout_weight="10"
                    android:choiceMode="singleChoice"
                    android:fontFamily="@font/contrail_one"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="TextView"
                    android:textColor="#000000"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/newPriceProduct"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@id/priceProduct"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="false"
                    android:layout_marginLeft="50dp"
                    android:layout_toRightOf="@id/priceProduct"
                    android:fontFamily="@font/contrail_one"
                    android:gravity="bottom"
                    android:text="100"
                    android:textColor="#FF0000"
                    android:textSize="24sp"
                    android:textStyle="bold|italic"
                    app:srcCompat="@drawable/ic_outline_delete_outline_24" />
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:id="@+id/expirationDateText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@id/nameProduct"
            android:layout_gravity="bottom|left"
            android:layout_marginLeft="10dp"
            android:layout_weight="10"
            android:text="TextView"
            android:textColor="#2196F3"
            android:textSize="17sp"
            android:textStyle="normal" />

    </androidx.cardview.widget.CardView>


</LinearLayout>