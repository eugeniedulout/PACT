<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".preferencesActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <Button
            android:id="@+id/retour"
            android:layout_width="match_parent"
            android:layout_height="71dp"
            android:text="Préférences"
            app:backgroundTint="#009688"
            app:icon="@drawable/ic_baseline_replay_24" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="299dp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/textView"
                        android:layout_width="131dp"
                        android:layout_height="46dp"
                        android:gravity="center"
                        android:text="Général:"
                        android:textColor="#3F51B5"
                        android:textSize="18sp"
                        android:textStyle="bold|italic" />

                    <CheckBox
                        android:id="@+id/cbBio"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Bio" />

                    <CheckBox
                        android:id="@+id/cbHalal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Halal" />

                    <CheckBox
                        android:id="@+id/cbVégétarien"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Végétarien" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView3"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Budget"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                        <Switch
                            android:id="@+id/rBtnPP"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="petit prix" />

                        <Switch
                            android:id="@+id/rBtnM"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="moyen" />

                        <Switch
                            android:id="@+id/rBtnPC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="plus cher" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:id="@+id/textView4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Qualité"
                            android:textSize="18sp"
                            android:textStyle="bold|italic" />

                        <Switch
                            android:id="@+id/btnA"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="A" />

                        <Switch
                            android:id="@+id/btnB"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="B" />

                        <Switch
                            android:id="@+id/btnC"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="C" />

                        <Switch
                            android:id="@+id/btnD"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="D" />

                        <Switch
                            android:id="@+id/btnE"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="E" />

                    </LinearLayout>

                </LinearLayout>

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="55dp"
                    android:text="Produit"
                    android:textColor="#3F51B5"
                    android:textColorHighlight="#0C0909"
                    android:textColorHint="#673AB7"
                    android:textSize="24sp" />

                <SearchView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="98dp"
                    android:orientation="horizontal"></LinearLayout>

            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>